toppar_path = ../toppar
input_psf   = step5_charmm2omm.psf
input_crd   = step5_charmm2omm.crd
input_rst   = step6.4_equilibration.rst
output_dcd  = step6.5_equilibration.dcd
output_rst  = step6.5_equilibration.rst

nstep       = 50000                             # number of steps to run
dt          = 0.002                             # time-step (ps)

nstout      = 1000                              # Writing output frequency (steps)
nstdcd      = 1000                              # Writing coordinates trajectory frequency (steps)

coulomb     = PME                               # Electrostatic cut-off method
ewaldTol    = 0.0005                            # Ewald error tolerance
vdw         = Force-switch                      # vdW cut-off method
r_on        = 1.0                               # Switch-on distance (nm)
r_off       = 1.2                               # Switch-off distance (nm)

temp        = 310                            # Temperature (K)
fric_coeff  = 1                                 # Friction coefficient for Langevin dynamics

pcouple     = yes                               # Turn on/off pressure coupling
p_ref       = 1.0, 1.0, 1.0                     # Pressure (Pref or Pxx, Pyy, Pzz; bar)
p_type      = anisotropic                       # MonteCarloBarostat type
p_scale     = Z
p_freq      = 100                               # Pressure coupling frequency (steps)

cons        = HBonds                            # Constraints mehtod

rest        = yes                               # Turn on/off restraints
fc_lpos     = 40.0                              # Positional restraint force constant for lipids (kJ/mol/nm^2)
fc_ldih     = 100.0                             # Dihedral restraint force constant for lipids (kJ/mol/rad^2)
